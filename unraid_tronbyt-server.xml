<?xml version="1.0"?>
<Container>
  <Name>tronbyt-server</Name>
  <Repository>ghcr.io/tronbyt/server:latest</Repository>
  <Registry>https://ghcr.io/tronbyt/server</Registry>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project/>
  <Overview>Tronbyt server container</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL/>
  <Icon/>
  <ExtraParams>--init --restart unless-stopped</ExtraParams>

  <Environment>
    <Variable>
      <Name>SERVER_PORT</Name>
      <Value></Value>
      <Mode/>
    </Variable>
    <Variable>
      <Name>SYSTEM_APPS_REPO</Name>
      <Value></Value>
      <Mode/>
    </Variable>
    <Variable>
      <Name>PRODUCTION</Name>
      <Value></Value>
      <Mode/>
    </Variable>
  </Environment>

  <Data>
    <Volume>
      <HostDir>/etc/localtime</HostDir>
      <ContainerDir>/etc/localtime</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/tronbyt/users</HostDir>
      <ContainerDir>/app/users</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/tronbyt/data</HostDir>
      <ContainerDir>/app/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>

  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8000</HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
        <Description>Container Port</Description>
      </Port>
    </Publish>
  </Networking>
</Container>
